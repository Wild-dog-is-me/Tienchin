<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.javaboy.tienchin.course.mapper.CourseMapper">

    <select id="selectCourseList" resultType="org.javaboy.tienchin.course.domin.Course">
        select * from tienchin_course where del_flag=0
        <if test="name!=null">
            and name=#{name}
        </if>
        <if test="type!=null">
            and type=#{type}
        </if>
        <if test="applyTo!=null">
            and apply_to=#{applyTo}
        </if>
        <if test="minPrice!=null">
            and price>#{minPrice}
        </if>
        <if test="maxPrice!=null">
            and price&lt;#{maxPrice}
        </if>
    </select>
</mapper>
